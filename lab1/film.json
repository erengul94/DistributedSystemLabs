{   
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id":"film_test.json",
    "type":"object",
    "properties":{
        "id": {"type": "integer"},
        "title": {"type":"string"},
        "owner": {"type":"integer"}, 
        "private": {"type":"boolean"},
        "watchDate": {"type":"string", "format": "date"},
        "rating": {"type": "integer", "minimum": 0, "maximum": 30},
        "favorite": {"type": "boolean", "default": false}


    },
    "required": ["id", "title", "owner", "private"],
    "dependencies": {
        "watchDate": {
            "properties": {
                "private":{"enum": [true]}
            }
        },
        "rating": {
            "properties": {
                "private":{"enum": [true]}
            }
        },
        "favorite": {
            "properties": {
                "private":{"enum": [true]}
            }
        }
    }    
}



